{% extends 'base.html.twig' %}

{% block header_button %}
    <button class="btn btn-info my-2 my-sm-0" type="button">Posts</button>
{% endblock %}

{% block body %}

    <main role="main" class="container d-flex flex-column">

        {% block content %}
            <div class="post card bg-light m-3">
                <h1 class="m-auto pt-3">{{ post.title }}</h1>

                <p class="m-3">{{ post.content }}</p>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('post_edit', {'id': post.id}) }}">
                        <button type="button" class="btn btn-success m-3">Edit</button>
                    </a>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger m-3">Delete</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
            {% for comment in comments %}

                <div class="card bg-light m-3">
                    <h4 class="mt-3 mr-3 ml-3">{{ comment.title }}</h4>
                    <p class="mr-3 ml-3">{{ comment.content }}</p>
                </div>
            {% endfor %}
        {% endblock %}

    </main>

{% endblock %}
