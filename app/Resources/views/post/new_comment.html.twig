{% extends 'post/show_post.html.twig' %}

{% block content %}

    {{ parent() }}

    <div class="card bg-light m-3">
        <h4 class="text-center mt-3 mr-3 ml-3">Comments</h4>

        {{ form_start(form, {'attr': {class: 'mr-3 ml-3 mt-2'}}) }}
        <div class="form-group">

            <div class="d-flex justify-content-around mb-2">

                {{ form_label(form.title,"Your name",{"label_attr": {"class": "col-2"}}) }}
                {{ form_widget(form.title) }}

            </div>

            {{ form_widget(form.content) }}

            <button type="submit" class="btn btn-success mt-3">Post comment</button>

        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}

